{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "composite": true,
    "baseUrl": ".",
    "verbatimModuleSyntax": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "Node"
  }
}
